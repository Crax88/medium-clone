{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"allowJs": false,
		"moduleResolution": "node",
		"lib": ["DOM", "ESNext"],
		"jsx": "react-jsx",
		"typeRoots": ["node_modules/@types", "types/"],
		// "noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"paths": {
			"src": ["src/*"]
		}
	},
	"include": ["src/**/*", "types"],
	"exclude": ["node_modules", "build"],
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
